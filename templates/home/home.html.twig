{% extends 'base.html.twig' %}

{% block title %}Agence Symfony 5{% endblock %}

{% block body %}
    
    <div class="jumbotron text-center">
        <h1>Page principal</h1>
        <p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. 
            Fugiat incidunt iure dignissimos ipsam minus nulla pariatur accusamus officiis rem facere! 
            Cupiditate repudiandae magnam ut exercitationem odio architecto nesciunt dolore maxime?
        </p>
    </div>

    <div class="container">
        <h2>Nos dernières annonces</h2>
        <div class="row flex">
            {% for property in properties %}
                <div class="col-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('property.show', {id: property.id, slug: property.slug}) }}">{{ property.title }}</a>
                            </h5>
                            <p class="card-text">{{ property.city }} ({{ property.postalCode }})</p>
                            <div class="text-primary">{{ property.formattedPrice }} €</div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
